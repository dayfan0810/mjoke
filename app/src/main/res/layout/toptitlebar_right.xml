<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toptitlebar_right"
    android:background="@color/maincolor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <RelativeLayout
            android:id="@+id/rl_toptitlebarright_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/toptitlebar_back_press">
            <View
                android:layout_centerInParent="true"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@mipmap/back_ico"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_toptitlebarright_name"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@id/rl_toptitlebarright_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textColor="@color/titilebar_text_color"
            android:textSize="16sp"/>
        <RelativeLayout
            android:id="@+id/rl_toptitlebarright_rightbt"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/toptitlebar_back_press">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/titilebar_text_color"
                android:textSize="16sp"
                android:text="@string/personcenter_top_register"
                />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>