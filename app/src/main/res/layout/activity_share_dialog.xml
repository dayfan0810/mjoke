<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jiyi="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_bg"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="app.jiyi.com.mjoke.aty.ShareDialogActivity">

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <app.jiyi.com.mjoke.utilview.CircleImageView
                android:id="@+id/share_qq"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/share_img_width"
                android:layout_height="@dimen/share_img_height"
                jiyi:hoverColor="@color/header_press"
                android:src="@mipmap/share_qq_norm"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <app.jiyi.com.mjoke.utilview.CircleImageView
                android:id="@+id/share_qq_zone"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/share_img_width"
                android:layout_height="@dimen/share_img_height"
                jiyi:hoverColor="@color/header_press"
                android:src="@mipmap/share_qzone_norm"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <app.jiyi.com.mjoke.utilview.CircleImageView
                android:id="@+id/share_xinlang"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/share_img_width"
                android:layout_height="@dimen/share_img_height"
                jiyi:hoverColor="@color/header_press"
                android:src="@mipmap/share_xinlang_norm"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪微博"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <app.jiyi.com.mjoke.utilview.CircleImageView
                android:id="@+id/share_weixin"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/share_img_width"
                android:layout_height="@dimen/share_img_height"
                jiyi:hoverColor="@color/header_press"
                android:src="@mipmap/share_weixin_norm"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <app.jiyi.com.mjoke.utilview.CircleImageView
                android:id="@+id/share_weixin_zone"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/share_img_width"
                android:layout_height="@dimen/share_img_height"
                jiyi:hoverColor="@color/header_press"
                android:src="@mipmap/share_weixinzone_norm"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <app.jiyi.com.mjoke.utilview.CircleImageView
                android:id="@+id/share_other"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/share_img_width"
                android:layout_height="@dimen/share_img_height"
                jiyi:hoverColor="@color/header_press"
                android:src="@mipmap/share_other_norm"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/share_btn_exit"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:background="@drawable/editinfo_bt"
        android:gravity="center"
        android:text="关闭"
        android:textColor="#ffffff"
        android:textSize="16sp"
        />
</LinearLayout>
